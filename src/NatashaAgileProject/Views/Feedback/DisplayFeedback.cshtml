@model DisplayFeedbackViewModel
<h1 class="page-header">Customer Feedback</h1>

<form class="form-horizontal" asp-controller="Feedback" asp-action="DisplayFeedback" method="post" role="form" asp-anti-forgery="true">
    <div asp-validation-summary="ModelOnly"></div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="panel panel-default">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>PackageID</th>
                        <th>PackageName</th>
                        <th>UserName</th>
                        <th>Feedback</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PacFeedback)
                    {
                        <tr>
                            <td>@item.PackageId</td>
                            <td>@Model.PacName</td>
                            <td>@User.Identity.Name</td>
                            <td>@item.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</form>

@using NatashaAgileProject.Models
@model UpdateUserViewModel

<h1 class="text-center page-header">Update User Details</h1>

<form class="form-horizontal" asp-controller="Account" asp-action="UpdateUser" method="post" role="form" asp-anti-forgery="true">
    <div asp-validation-summary="ModelOnly"></div>
      
    <div class="form-group">
        <label asp-for="UserName" class="col-sm-2 control-label col-sm-offset-2"></label>
        <div class="col-sm-5">
            <input asp-for="UserName" class="form-control" id="UserName" value="@Model.UserName" />
            <span asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-sm-2 control-label col-sm-offset-2"></label>
        <div class="col-sm-5">
            <input asp-for="Email" class="form-control" id="Email" value="@Model.Email" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-5 col-sm-offset-4">
            <button type="submit" class="btn btn-default">Update</button>
        </div>
    </div>
</form>

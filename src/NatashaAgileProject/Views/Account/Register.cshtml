@model RegisterViewModel

    <h1 class="page-header">Register</h1>

    <form class="form-horizontal" asp-controller="Account" asp-action="Register" method="post" role="form">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="UserName" class="col-sm-2 control-label"></label>
        <div class="col-sm-5">
            <input asp-for="UserName" class="form-control" id="UserName" placeholder="UserName" />
            <span asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-sm-2 control-label"></label>
        <div class="col-sm-5">
            <input asp-for="Email" class="form-control" id="Email" placeholder="Email" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="col-sm-2 control-label"></label>
        <div class="col-sm-5">
            <input asp-for="Password" class="form-control" id="Password" placeholder="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-sm-2 control-label"></label>
        <div class="col-sm-5">
            <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" placeholder="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-5">
            <button type="submit" class="btn btn-default">Register</button>
        </div>
    </div>
    <br />
    <div>
        Provider, Register here: <a asp-controller="Account" asp-action="RegisterProvider"> Register</a>
    </div>
</form>

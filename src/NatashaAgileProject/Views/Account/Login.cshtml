@model LoginViewModel

    <h1 class="page-header">Login</h1>
    <form class="form-horizontal" asp-controller="Account" asp-action="Login" method="post" role="form" asp-route-returnurl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="UserName" class="col-sm-2 control-label"></label>
            <div class="col-sm-5">
                <input asp-for="UserName" class="form-control" id="UserName" placeholder="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="col-sm-2 control-label"></label>
            <div class="col-sm-5">
                <input asp-for="Password" class="form-control" id="Password" placeholder="Password" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-5">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input type="checkbox" asp-for="RememberMe"> Remember Me
                    </label>
                    <span asp-validation-for="RememberMe"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-5">
                <button type="submit" class="btn btn-default">Login</button>
            </div>
        </div>

        <br />
        <div>
            Don't have an Exsisting Account: <a asp-controller="Account" asp-action="Register"> Register</a>
        </div>
    </form>


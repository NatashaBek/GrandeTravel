@model RoleViewModel
<h1>Add Role</h1>

<form asp-controller="Account" asp-action="AddRole" method="post" role="form" asp-anti-forgery="true">
    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div>
        <input type="submit" value="Add" />
    </div>
</form>
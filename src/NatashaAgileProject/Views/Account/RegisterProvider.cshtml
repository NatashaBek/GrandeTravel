@model RegisterViewModel
<h1 class="text-center page-header">Provider Registery</h1>

<form class="form-horizontal" asp-controller="Account" asp-action="RegisterProvider" method="post" role="form" asp-anti-forgery="true">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="UserName" class="col-sm-2 control-label col-sm-offset-2"></label>
        <div class="col-sm-5">
            <input asp-for="UserName" class="form-control" id="UserName" placeholder="User Name" />
            <span asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-sm-2 control-label col-sm-offset-2"></label>
        <div class="col-sm-5">
            <input asp-for="Email" class="form-control" id="Email" placeholder="Email" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="col-sm-2 control-label col-sm-offset-2"></label>
        <div class="col-sm-5">
            <input asp-for="Password" class="form-control" id="Password" placeholder="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-sm-2 control-label col-sm-offset-2"></label>
        <div class="col-sm-5">
            <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" placeholder="Confirm Password"/>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-5">
            <button type="submit" class="btn btn-default">Register</button>
        </div>
    </div>
</form>

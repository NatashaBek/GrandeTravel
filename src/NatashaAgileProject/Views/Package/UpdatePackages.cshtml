@model UpdatePackageDetailsViewModel

<h1 class="page-header">Update Package</h1>

<form class="form-horizontal" asp-controller="Package" asp-action="UpdatePackages" method="post" role="form" asp-anti-forgery="true">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Location"></label>
        <div class="col-sm-5">
            <input class="form-control" asp-for="Location" id="Location" value="@Model.Location" />
            <span asp-validation-for="Location"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Details"></label>
        <div class="col-sm-5">
            <textarea class="form-control" rows="3" asp-for="Details" id="Details" value="@Model.Details"></textarea>
            <span asp-validation-for="Details"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Price"></label>
        <div class="col-sm-5">
            <input class="form-control" asp-for="Price" id="Price" value="@Model.Price" />
            <span asp-validation-for="Price"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-5">
            <div class="checkbox">
                <label asp-for="Availability">
                    <input type="checkbox" asp-for="Availability" class="form-control" id="Availability" />
                    <span asp-validation-for="Availability"></span>
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-5">
            <button type="submit" class="btn btn-default">Update</button>
        </div>
    </div>
</form>